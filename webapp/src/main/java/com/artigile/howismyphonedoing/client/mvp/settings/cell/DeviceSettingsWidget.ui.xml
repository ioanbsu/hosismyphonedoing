<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:with field="images" type="com.artigile.howismyphonedoing.client.resources.Images"/>
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:with field='batteryInfo' type='java.lang.String'/>


    <ui:style>
    </ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td><g:Label text="{msg.device_settings_ringer_mode_label}"/></td>
                <td>
                    <g:RadioButton name="ringerMode" text="{msg.device_settings_ringer_mode_normal}" ui:field="ringerModeSilentNormal"/>
                    <g:RadioButton name="ringerMode" text="{msg.device_settings_ringer_mode_vibrate}" ui:field="ringerModeSilentVibrate"/>
                    <g:RadioButton name="ringerMode" text="{msg.device_settings_ringer_mode_silent}" ui:field="ringerModeSilent"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:Button ui:field="saveButton" text="Save"/>
                </td>

            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        >
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:with field='batteryInfo' type='java.lang.String'/>
    <ui:with field='color' type='java.lang.String'/>
    <ui:with field='batteryLevel' type='java.lang.String'/>
    <ui:with field='width' type='java.lang.String'/>
    <ui:with field='additionalBatteryInfo' type='java.lang.String'/>

    <ui:style>
        .deviceInfo {
            background-color: #fff;
        }

        .batteryLevelWraper {
            width: 200px;
            position: relative;
            border: 1px solid #000;
            height: 19px;
            font-size: 11px;
            background: #ccc;
        }

        .batteryLevelBar {
            background: red;
            position: absolute;
            top: 3px;
            height: 14px;
            left: 3px;
            font-size: 11px;
            padding-left: 2px;
            text-align: center;
            color: #fff;
            text-shadow: 0px 0px 4px #000;
        }

        .comingSoonClass {
            color: #777;
        }

    </ui:style>

    <table class="{style.deviceInfo}">
        <tr>
            <td>
                <ui:text from='{msg.device_settings_battery_label}'/>
            </td>
            <td>
                <div class="{style.batteryLevelWraper}">
                    <div class="{style.batteryLevelBar}" style='{color};{width}' title="{additionalBatteryInfo}">
                        <ui:text from='{batteryLevel}%'/>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>Reception level:</td>
            <td class="{style.comingSoonClass}">coming soon...</td>
        </tr>
        <tr>
            <td>Wi-fi enabled:</td>
            <td class="{style.comingSoonClass}">coming soon...</td>
        </tr>
        <tr>
            <td>Bluetooth enabled:</td>
            <td class="{style.comingSoonClass}">coming soon...</td>
        </tr>
    </table>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:with field="images" type="com.artigile.howismyphonedoing.client.resources.Images"/>
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:with field='batteryInfo' type='java.lang.String'/>


    <ui:style>.lockDevicePinImage {

    }

    .lockDeviceButton {
        font-size: 10px;
    }

    </ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td>
                    <g:Button text="{msg.device_settings_anti_theft_lock_with_pin_text}"
                              ui:field="lockTheDevice" addStyleNames="{style.lockDeviceButton}"/>
                </td>
                <td>
                    <g:PasswordTextBox ui:field="newPinCode"/>
                </td>
                <td>
                    <g:Image resource="{images.question}"
                             title="{msg.device_settings_anti_theft_lock_with_pin_help_text}"
                             stylePrimaryName="{style.lockDevicePinImage}"/>
                </td>
                <td>
                    <g:Image resource="{images.loadingSmallIcon}" visible="false" ui:field="deviceLockingLoading"/>
                </td>

            </tr>
            <tr>
                <td><g:Button ui:field="takePicture" text="{msg.device_settings_anti_theft_take_picture_text}"/></td>
                <td><g:FlowPanel>
                    <g:RadioButton name="cameraType" text="{msg.device_settings_anti_theft_take_picture_camera_back}" ui:field="backCamera"/>
                    <g:RadioButton name="cameraType" text="{msg.device_settings_anti_theft_take_picture_camera_front}" ui:field="frontCamera"/>
                </g:FlowPanel></td>
                <td><g:CheckBox text="{msg.device_settings_anti_theft_take_picture_camera_hd}" ui:field="highQuality"/></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
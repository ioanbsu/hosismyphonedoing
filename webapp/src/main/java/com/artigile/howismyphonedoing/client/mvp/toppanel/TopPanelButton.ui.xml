<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:with field="images" type="com.artigile.howismyphonedoing.client.resources.Images"/>
    <ui:style>.loadingIcon {
        position: absolute;
        top: 25px;
        left: 7px;
    }
    </ui:style>
    <g:FocusPanel ui:field="mainPanel">
        <g:FlowPanel>
            <g:Label ui:field="buttonText"/>
            <g:Image resource="{images.loadingSmallIcon}" stylePrimaryName="{style.loadingIcon}" ui:field="loadingIcon"/>
        </g:FlowPanel>
    </g:FocusPanel>
</ui:UiBinder>
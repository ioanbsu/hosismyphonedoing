<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:style>
        .mainPanelStyle {
            padding: 20px;
        }



    </ui:style>

    <g:DialogBox ui:field="devicesListWindow" glassEnabled="false" modal="false" animationEnabled="true">
        <g:FlowPanel styleName="{style.mainPanelStyle}">
            <g:FlowPanel ui:field="devicesList"/>
            <g:Button ui:field="refresh" text="{msg.view_my_devices_window_refresh_button}"/>
            <g:Button ui:field="closeWindow" text="{msg.view_my_devices_window_close_button}"/>
        </g:FlowPanel>
    </g:DialogBox>

</ui:UiBinder>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:style>
        .mainPanelStyle {
            padding: 20px;
            width: 600px;
        }

        .messageStyle {
            text-align: justify;
            padding-bottom: 10px;
        }

        .scrollableArea {
            max-width: 600px;
            max-height: 600px;
        }

        .showPictureDialogBox {
            width: auto;
        }

        .pictureStyle {
            width: 600px;
        }


    </ui:style>

    <g:DialogBox ui:field="messageWindow" glassEnabled="true" modal="true" animationEnabled="true" width="680px"
                 addStyleNames="{style.showPictureDialogBox}">
        <g:FlowPanel styleName="{style.mainPanelStyle}">
            <g:Button ui:field="closeWindow" text="{msg.message_window_default_ok_button}"/>
            <g:ScrollPanel styleName="{style.scrollableArea}">
                <g:Image ui:field="imageToDisplay"  stylePrimaryName="{style.pictureStyle}"/>
            </g:ScrollPanel>
        </g:FlowPanel>
    </g:DialogBox>

</ui:UiBinder>
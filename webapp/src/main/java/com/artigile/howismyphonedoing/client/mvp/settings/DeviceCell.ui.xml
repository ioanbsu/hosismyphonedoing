<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
    <ui:with field='deviceName' type='java.lang.String'/>

    <ui:style field="cellStyles" type="com.artigile.howismyphonedoing.client.resources.CellStyles">
        .deviceNameStyle {
            cursor: pointer;
            padding: 10px;
            display: block;
            transition: box-shadow 0.3s, background-color 0.3s, color 0.3s;
            -webkit-transition-property: box-shadow, background-color, color;
            -webkit-transition-duration: 0.3s;
            margin-top: 2px;
        }

        .deviceNameStyle:hover {
            box-shadow: 1px 0px 2px #555;
            background-color: #628cd5;
            color: #fff;
        }
    </ui:style>

    <span class="{cellStyles.deviceNameStyle}">
        <span>
            <ui:text from='{deviceName}'/>
        </span>
    </span>
</ui:UiBinder>
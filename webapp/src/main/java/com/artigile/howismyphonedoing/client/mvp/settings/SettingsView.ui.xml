<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:with field="images" type="com.artigile.howismyphonedoing.client.resources.Images"/>

    <ui:style>
        @external gwt-Button;

        .settingsDialogBox {
            width: auto;
        }

        .devicesList {
            height: 200px;
        }

        .buttonsPanel {
            position: absolute;
            bottom: 0;
        }

        .buttonsPanel .gwt-Button {
            margin: 4px;
        }
    </ui:style>

    <g:DialogBox ui:field="mainDialogBox" modal="false" glassEnabled="false" animationEnabled="true" width="500px"
                 text="{msg.device_settings_title}" addStyleNames="{style.settingsDialogBox}">
        <g:DockLayoutPanel unit='EM' height="20em" width="500px">
            <g:west size='10'>
                <g:FlowPanel>
                    <g:ScrollPanel styleName="{style.devicesList}">
                        <cellview:CellList ui:field="addableDevicesList" pageSize="50"/>
                    </g:ScrollPanel>
                    <g:FlowPanel styleName="{style.buttonsPanel}">
                        <g:Button ui:field="closeSettings" text="{msg.device_settings_close_window_button}"/>
                        <g:Button ui:field="refreshDeviceInfo" text="{msg.device_settings_refresh_device_info_button}"/>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:west>
            <g:center>
                <g:TabLayoutPanel barUnit='EM' barHeight='2.4' animationDuration="200">
                    <g:tab>
                        <g:header size='7'>
                            <b>Device</b>
                            info
                        </g:header>
                        <cellview:CellWidget ui:field="deviceInfo"/>
                    </g:tab>
                    <g:tab>
                        <g:customHeader size='7'>
                            <g:Label>Settings</g:Label>
                        </g:customHeader>
                        <g:HTMLPanel>
                            <table>
                                <tr>
                                    <td>Silent Mode</td>
                                    <td>
                                        <g:RadioButton name="silentMode" text="On" enabled="false"/>
                                        <g:RadioButton name="silentMode" text="Off" enabled="false"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Alarms</td>
                                    <td>
                                        <g:ListBox enabled="false"/>
                                        <g:Button text="Add alarm time" enabled="false"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Bluetooth</td>
                                    <td>
                                        <g:RadioButton name="bluetooth" text="On" enabled="false"/>
                                        <g:RadioButton name="bluetooth" text="Off" enabled="false"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Wi-fi</td>
                                    <td>
                                        <g:RadioButton name="wifi" text="On" enabled="false"/>
                                        <g:RadioButton name="wifi" text="Off" enabled="false"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <g:Button text="Save Settings" enabled="false"/>
                                    </td>
                                </tr>
                            </table>
                        </g:HTMLPanel>
                    </g:tab>
                </g:TabLayoutPanel>

            </g:center>
        </g:DockLayoutPanel>
    </g:DialogBox>
</ui:UiBinder>
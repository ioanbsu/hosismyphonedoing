<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:style>

        .loggedInLabel {
            position: absolute;
            top: 0;
            right: 0;
            padding: 5px;
            color: grey;
            font-size: 10px;
        }


    </ui:style>
    <g:FlowPanel>
        <g:Button text="Log out" ui:field="logoutButton"/>
        <g:Button text="send message" ui:field="sendTextToPhone"/>
        <g:Button text="getMyPhoneInfo" ui:field="phoneInfoButton"/>
        <g:Button text="Get Phone Location" ui:field="phoneLocation"/>
        <g:Button text="Remove all devices" ui:field="removeAllDevices"/>
        <g:TextBox ui:field="textToSend"/>
        <g:Label ui:field="loggedInAs" styleName="{style.loggedInLabel}" text="{msg.not_logged_in}"/>
    </g:FlowPanel>
</ui:UiBinder>
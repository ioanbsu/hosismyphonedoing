<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="msg" type="com.artigile.howismyphonedoing.client.Messages"/>
    <ui:style>

        .loggedInLabel {
            position: absolute;
            top: 0;
            right: 0;
            padding: 5px;
            color: grey;
            font-size: 10px;
        }

        .chahelState {
            position: absolute;
            top: 15px;
            right: 0;
            font-size: 10px;
            color: grey;
            margin: 5px;
        }

        .topMenuButtonStyle {
            float: left;
            padding: 1.9em;
            transition: background 0.2s, margin-left 0.2s, margin-right 0.2s, box-shadow 0.2s;
            -webkit-transition-property: background, margin-left, margin-right, box-shadow;
            -webkit-transition-duration: 0.2s;
            background-color: #FFF;
            margin: 0;
            border-radius: 0;
            border: none;
            color:#505050;
        }

        .topMenuButtonStyle:hover {
            box-shadow: 0px 0px 6px #101010;
            cursor: pointer;
            margin-left: 5px;
            margin-right: 5px;
            background: #eee;
        }

        .logOutFloatRight {
            float: right;
        }


    </ui:style>
    <g:FlowPanel>
        <g:Button ui:field="myDevicesCount" styleName="{style.topMenuButtonStyle}"/>
        <g:Button text="{msg.top_panel_get_device_location_button}" ui:field="phoneLocation" styleName="{style.topMenuButtonStyle}"/>
        <g:Button text="{msg.top_panel_remove_all_my_devices}" ui:field="removeAllDevices" styleName="{style.topMenuButtonStyle}"/>
        <g:Button text="{msg.top_panel_read_loud_on_my_phone}" ui:field="sendTextToPhone" styleName="{style.topMenuButtonStyle}"/>
        <g:TextBox ui:field="textToSend"/>
        <g:Button text="{msg.top_panel_log_out}" ui:field="logoutButton" styleName="{style.topMenuButtonStyle} {style.logOutFloatRight}"/>

        <g:Label ui:field="channelStateLabel" styleName="{style.chahelState}"/>
        <g:Label ui:field="loggedInAs" styleName="{style.loggedInLabel}" text="{msg.top_panel_not_logged_in}"/>
    </g:FlowPanel>
</ui:UiBinder>